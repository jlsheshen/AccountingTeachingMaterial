<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="5dp" >

    <Button
        android:id="@+id/btn_play"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_edulib_start"
        android:button="@null" />

    <TextView
        android:id="@+id/tv_time_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btn_play"
        android:text="00:00"
        android:textColor="@color/white" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_duration"
        android:layout_toRightOf="@+id/tv_time_played"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/bg_edulib_seekbar"
        android:textColor="@color/white"
        android:thumb="@drawable/btn_edulib_thumb" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/btn_favorite"
        android:text="00:00"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_favorite"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_edulib_favourite"
        android:textColor="@color/white" />

</RelativeLayout>