<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="SizeBarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">76px</item>
        <item name="android:layout_marginBottom">16px</item>
        <item name="android:layout_marginLeft">16px</item>
    </style>

    <style name="SizeBarButtonStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>

    </style>

    <style name="TitleBarStyle">
        <item name="android:layout_height">@dimen/title_layout_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LeftDrawlayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">300px</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBlueContent</item>
    </style>
    <style name="VerticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/colorBlueContent</item>
        <item name="android:layout_marginLeft">15px</item>
        <item name="android:layout_marginRight">15px</item>
    </style>
    
    <style name = "SettingItem">
        <item name="android:layout_height">60px</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ExpandableLvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:divider">@color/colorBlueContent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_margin">@dimen/little_interval</item>
        <item name="android:childDivider">@color/colorBlueContent</item>
    </style>
    <style name="FragmentPadding">
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingRight">10px</item>
    </style>
    <style name="ItemPadding">
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingBottom">10px</item>


    </style>


</resources>
