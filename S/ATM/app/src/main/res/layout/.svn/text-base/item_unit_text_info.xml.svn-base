<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ly"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/class_id_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15px"
            android:text="测验信息"
            android:textColor="@color/red"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:id="@+id/item_start_time_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_id_title_tv"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/item_exam_head_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测验时间："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_text_size" />

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="2016-11-11 11:11"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_end_time_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_start_time_ly"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/item_exam_head_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止时间："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="2016-11-11 11:11"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_challeng_time_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_end_time_ly"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/item_exam_head_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测验时长："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:id="@+id/challeng_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="90分钟"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/test_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15px"
            android:text="试题信息"
            android:textColor="@color/red"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:id="@+id/item_choose_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_tv"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/item_exam_head_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单选题："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:id="@+id/single_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="5道"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="多选题："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:id="@+id/multiple_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="5道"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_judge_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_choose_ly"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/item_exam_head_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="判断题："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size"

                />

            <TextView
                android:id="@+id/judge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="5道"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="简答题："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size"

                />

            <TextView
                android:id="@+id/fill_in_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="5道"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_short_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_judge_ly"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/item_exam_head_iv"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="判断题："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size"

                />

            <TextView
                android:id="@+id/short_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="5道"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="综合题："
                android:textColor="@color/gray"
                android:textSize="@dimen/item_title_text_size"

                />

            <TextView
                android:id="@+id/comprehensive_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="5道"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_title_text_size" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>