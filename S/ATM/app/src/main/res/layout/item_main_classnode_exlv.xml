<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/middle_interval"
    android:background="@color/colorBlueBackground"
    >

    <TextView
    android:id="@+id/item_classnode_num_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/class_name"
    android:textColor="@color/colorNodeListItem"
    android:textSize="@dimen/item_text_size" />

    <TextView
        android:id="@+id/item_classnode_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/middle_interval"
        android:text="@string/class_name"
        android:textColor="@color/colorNodeListItem"
        android:textSize="@dimen/item_text_size" />

</LinearLayout>
