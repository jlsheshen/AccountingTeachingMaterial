<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        style="@style/LeftDrawlayoutStyle"
        android:orientation="vertical"
        android:background="@color/colorBlueBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_head_card_height"
            android:background="@color/colorBlueBackground"
            >
            <com.edu.accountingteachingmaterial.view.CircleImageView
                android:id="@+id/my_head_civ"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/touxiang_me"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp"
               />

            <TextView
                android:id="@+id/my_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_head_civ"
                android:text="@string/login"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/content_text_size"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_item_height"
            android:text="@string/my_errors"
            android:textColor="@color/colorBlueBackground"
            android:textSize="@dimen/item_title_text_size"
            android:padding="5dp"
            android:drawableLeft="@mipmap/icon_wodecuoti_n"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <View
            style="@style/HorizontalLine"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_layout_height"
            android:text="@string/my_errors"
            android:textColor="@color/colorBlueBackground"
            android:textSize="@dimen/title_text_size"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <View
            style="@style/HorizontalLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/my_background_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/my_bacground"
                android:layout_centerInParent="true"

                />
            <TextView
                android:id="@+id/my_noerror_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_background_iv"
                android:textColor="@color/colorBlueBackground"
                android:textSize="@dimen/item_title_text_size"
                android:text="我的人生没有错题"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>



    </LinearLayout>

</LinearLayout>