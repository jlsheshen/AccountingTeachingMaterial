<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350px" android:layout_height="200px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="70px"
    android:paddingBottom="16px"
    android:background="@mipmap/my_bacground"
    >


    <EditText
        android:id="@+id/ip_content_et"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:textSize="@dimen/content_text_size"
        android:background="@drawable/shape_ip_et"

        />
    <ImageView
        android:id="@+id/ip_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_closel_ip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"


        />
    <ImageView
        android:id="@+id/ip_save_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_save_ip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        />




</RelativeLayout>