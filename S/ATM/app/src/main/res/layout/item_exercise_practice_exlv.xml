<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="60px"
    android:paddingLeft="40px"

    >
    <ImageView
        android:id="@+id/item_practice_isright_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_cuo_n"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/item_practice_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/colorWhite"
        android:layout_toRightOf="@id/item_practice_isright_iv"
        android:layout_marginLeft="10px"
        android:layout_centerVertical="true"


        />
    <TextView
        android:id="@+id/item_practice_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/item_practice_number_tv"
        android:layout_centerVertical="true"

        />
    <!--<View-->
        <!--style="@style/HorizontalLine"-->
        <!--android:layout_toLeftOf="@+id/item_practice_number_tv"-->
        <!--android:layout_below="@id/item_practice_number_tv"-->
        <!--/>-->

</RelativeLayout>