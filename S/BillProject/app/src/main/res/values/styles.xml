<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 选项单项按钮样式 -->
    <style name="rb_option_style">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@drawable/rb_selector_subject_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 分组单据标签样式 -->
    <style name="rb_label_style">
        <item name="android:textColor">@drawable/rb_selector_label_text_color</item>
        <item name="android:background">@drawable/rb_selector_label_bg</item>
        <item name="android:button">@null</item>
        <item name="android:textSize"> @dimen/txt_size_small</item>
    </style>

</resources>
