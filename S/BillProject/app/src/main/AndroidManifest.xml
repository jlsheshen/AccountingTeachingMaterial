<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".testbill.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edu.testbill.PracticeContentActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation|navigation|locale|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.edu.testbill.ExamContentActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation|navigation|locale|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.edu.testbill.ShowDetailsContentActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation|navigation|locale|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>