<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Edu.NoTitleBar.Anim" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/TranAnimation</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="TranAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_anim_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_anim_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_anim_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_anim_in</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_anim_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_anim_in</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_anim_out</item>
    </style>

    <style name="popupWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="fileChooserName">
        <item name="android:drawablePadding">@dimen/list_item_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- 单项按钮样式 -->
    <style name="RadioStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/radio_selector_bg</item>
        <item name="android:textColor">@drawable/radio_selector_text</item>
        <item name="android:textSize">@dimen/txt_size_half_medium</item>
    </style>

</resources>
