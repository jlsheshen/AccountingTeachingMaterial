<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/LeftDrawlayoutStyle"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_head_card_height" >

            <com.edu.library.view.CircleImageView
                android:id="@+id/my_head_civ"
                android:layout_width="80dp"
                android:layout_height="80dp"
               android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher"
                app:civ_border_color="@color/trans_parent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp"
                app:civ_fill_color="@color/white" />
        
            <TextView 
                android:id="@+id/my_name_tv"
                android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/login"
				                
                />
        
        </RelativeLayout>
        
        
    </LinearLayout>

</LinearLayout>