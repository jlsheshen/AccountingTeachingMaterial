<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SizeBarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/side_bar_width</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SizeBarButtonStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:layout_height">@dimen/title_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    
    <style name="LeftDrawlayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/drawlayout_width</item>     
    </style>

</resources>