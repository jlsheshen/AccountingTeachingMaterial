<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SizeBarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/side_bar_width</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SizeBarButtonStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:layout_height">@dimen/title_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="LeftDrawlayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/drawlayout_width</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/horizontal_lin_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_lin_padding</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name = "SettingItem">
        <item name="android:layout_height">@dimen/title_layout_height</item>
        <item name="android:layout_width">match_parent</item>

    </style>


</resources>
